                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/coin5"
                android:onClick="dropIn"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:padding="5dp"
                android:tag="4" />
